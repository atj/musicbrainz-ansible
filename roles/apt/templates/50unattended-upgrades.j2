# {{ ansible_managed }}

Unattended-Upgrade::Origins-Pattern {
{% for pattern in apt_unattended_upgrade_origins_pattern %}
    "{{ pattern }}";
{% endfor %}
};

Unattended-Upgrade::Package-Blacklist {
{% for pattern in apt_unattended_upgrade_package_blacklist + apt_unattended_upgrade_group_package_blacklist + apt_unattended_upgrade_host_package_blacklist %}
    "{{ pattern }}";
{% endfor %}
};

Unattended-Upgrade::AutoFixInterruptedDpkg "{{ apt_unattended_upgrade_autofix_interrupted_dpkg|ternary('true', 'false') }}";
Unattended-Upgrade::MinimalSteps "{{ apt_unattended_upgrade_minimal_steps|ternary('true', 'false') }}";
Unattended-Upgrade::InstallOnShutdown "{{ apt_unattended_upgrade_install_on_shutdown|ternary('true', 'false') }}";
Unattended-Upgrade::Mail "{{ apt_unattended_upgrade_mail }}";
Unattended-Upgrade::MailOnlyOnError "{{ apt_unattended_upgrade_mail_only_on_error|ternary('true', 'false') }}";
Unattended-Upgrade::Remove-Unused-Kernel-Packages "{{ apt_unattended_upgrade_remove_unused_kernel_packages|ternary('true', 'false') }}";
Unattended-Upgrade::Remove-New-Unused-Dependencies "{{ apt_unattended_upgrade_remove_new_unused_dependencies|ternary('true', 'false') }}";
Unattended-Upgrade::Remove-Unused-Dependencies "{{ apt_unattended_upgrade_remove_unused_dependencies|ternary('true', 'false') }}";
Unattended-Upgrade::Automatic-Reboot "{{ apt_unattended_upgrade_automatic_reboot|ternary('true', 'false') }}";
Unattended-Upgrade::Automatic-Reboot-WithUsers "{{ apt_unattended_upgrade_automatic_reboot_with_users|ternary('true', 'false') }}";
Unattended-Upgrade::Automatic-Reboot-Time "{{ apt_unattended_upgrade_automatic_reboot_time }}";
Unattended-Upgrade::SyslogEnable "{{ apt_unattended_upgrade_syslog_enable|ternary('true', 'false') }}";
Unattended-Upgrade::SyslogFacility "{{ apt_unattended_upgrade_syslog_facility }}";
Unattended-Upgrade::Verbose "{{ apt_unattended_upgrade_verbose|ternary('true', 'false') }}";
Unattended-Upgrade::Debug "{{ apt_unattended_upgrade_debug|ternary('true', 'false') }}";
